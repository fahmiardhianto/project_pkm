<h1>Log In</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path, html: { class: "form-horizontal" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email", class: "col-sm-2 control-label" %>
        <%= f.text_field :email, class: "col-sm-4" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password", class: "col-sm-2 control-label" %>
        <%= f.password_field :password, class: "col-sm-4" %>
      </div>

      <%= f.submit "Log In", class: "btn btn-lg btn-primary" %>
    <% end %>

    <p>Tidak punya akun?<%= link_to " Daftar sekarang!", signup_path %></p>
  </div>
</div>
