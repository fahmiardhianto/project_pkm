<div class="col-md-2">
  <h2>Kategori</h2>
  <ul>
    <% @categories.each do |cat| %>
    <li><a href="/ukm?category=<%= cat.id %>" data-id='<%= cat.id %>'><%= cat.name %></a></li>
    <% end %>
    <li><a href="/">Semua</a></li>
  </ul>
</div>


<div class="col-md-10">
  <h1> UKM</h1>
  
  <% @businesses.each do |business| %>
  <div class="kotakan-ukm">
    <div class="item-business">
      <div class="img-thumbnail"><%= image_tag(business.photo.url) %></div>
      <p><h2><%= link_to business.name, business %></h2><div class="hr-divider"></div></p>
      <p><%= truncate(business.description, length: 500, separator: ' ') { link_to ' baca selengkapnya', business} %></p>
    </div>
    <div class="styled">
      <progress value="<%= business.received %>" max="<%= business.target %>"></progress>
    </div>
    <div class="kotakan">
      <div class="persen">
        <p><strong><%= business.received/business.target*100 %>%</strong></p>
        <p><h5>Progress</h5></p>
      </div>  <div class="vr-divider"></div>
      <div class="terkumpul">
        <p><strong><%= business.received %></strong></p>
        <p><h5>Terkumpul</h5></p>
      </div>
      <div class="vr-divider2"></div>
      <div class="hari">
        <p><strong>20</strong></p>
        <p><h5>Hari Tersisa</h5></p>
      </div>
    </div>
    </div>
  <% end %>

</div>
