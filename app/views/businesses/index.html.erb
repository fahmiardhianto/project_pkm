<h1>UKM</h1>


<div class="col-md-2">
  <h2>Kategori</h2>
  <ul>
    <% @categories.each do |cat| %>
    <li><%= cat.name %></li>
    <% end %>
  </ul>
</div>
<div class="col-md-10">
  <% @businesses.each do |business| %>
    <div class="item-business">
	<div class="left"><%= link_to image_tag('noimage.png'), root_path %></div>
      <p><h2><%= link_to business.name, business %></h2></p>
      <p><%= truncate(business.description, length: 400, separator: ' ') %></p>

    </div>
  <% end %>

</div>

<br>
<div class="clear"></div>
<%= link_to 'Buat profil UKM', new_business_path %>
