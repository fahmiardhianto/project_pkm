  <div class="avatar-profile">
    <%= image_tag @user.avatar.url %>
  </div>

<div class="profil-pengguna">
  <p>
    <strong>Nama:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Tanggal lahir:</strong>
    <%= @user.birthday %>
  </p>

    <p>Usaha <%= @user.name %></p>
    <% @businesses.each do |business| %>
      <div class="ukm-photo-thumbnail">
        <%= image_tag business.photo.url %>
        <p>
          <%= link_to business.name, business %>
        </p>
      </div>
    <% end %>

    <br><br>
  <% if logged_in? && current_user == @user %>
    <p>
      <%= link_to 'Buat usaha', new_business_path %>
    </p>
  <% end %>
</div>
